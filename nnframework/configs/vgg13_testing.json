{
  "name": "VGG13-testing",
  "n_gpu": 1,

  "arch": {
    "type": "VGGModel",
    "args": {
      "variant": 13,
      "num_classes" : 2,
      "print_model": true,
      "bn": true
    }
  },

  "loss": "cross_entropy_loss",
  "metrics": ["accuracy"],

  "data_loader": {
    "type": "FakeLoader",
    "args": {
      "data_dir": "../testdb",
      "batch_size": 2,
      "input_size": 224,
      "shuffle": true,
      "validation_split": 0.25,
      "num_workers": 2
    }
  },

  "optimizer": {
    "type": "Adam",
    "args":{
      "lr": 0.00001,
      "weight_decay": 0,
      "amsgrad": true
    }
  },

  "lr_scheduler": {
    "type": "StepLR",
    "args": {
      "step_size": 50,
      "gamma": 0.1
    }
  },

  "trainer": {
    "epochs": 3,
    "save_dir": "saved/",
    "save_period": 1,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 10,
    "tensorboard": false
  }
}